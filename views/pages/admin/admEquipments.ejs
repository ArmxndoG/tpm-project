<%- include('../../layouts/header') %> <!-- Incluye el header -->

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Administración de equipos</title>
    <link rel="stylesheet" href="/css/home_style.css"/>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        h1 {
            color: #333;
            margin-bottom: 40px;
            text-align: center;
        }

        .buttons-container {
            display: flex;
            gap: 20px;
            flex-wrap: wrap;
            justify-content: center;
        }

        .admin-button {
            background-color: white;
            border: none;
            border-radius: 12px;
            padding: 20px;
            width: 200px;
            height: 200px;
            cursor: pointer;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

        .admin-button:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

        .icon {
            width: 60px;
            height: 60px;
            margin-bottom: 10px;
        }

        .button-text {
            color: #0088cc;
            font-size: 1.1em;
            text-align: center;
            margin: 0;
        }
    </style>
</head>
<body>
    
    <h1>Administración de equipos</h1>
    <div class="buttons-container">
        <button class="admin-button" onclick="window.location.href='/tpm/admEquipments/addEquipment'">
            <img src="/icons/agregar-equipo.svg" alt="Agregar equipo" class="icon">
            <p class="button-text">Agregar equipo</p>
        </button>

        <button class="admin-button" onclick="window.location.href='/tpm/admEquipments/deleteEquipment'">
            <img src="/icons/delete-equipment.svg" alt="Eliminación de equipo" class="icon">
            <p class="button-text">Eliminación de equipo</p>
        </button>
        
        <button class="admin-button" onclick="window.location.href='/tpm/admEquipments/relocateEquipment'">
            <img src="/icons/modificar-localizacion.svg" alt="Modificar localización" class="icon">
            <p class="button-text">Modificar localización</p>
        </button>

    </div>
    
</body>
</html>
